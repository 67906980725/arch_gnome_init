#!/usr/bin/env bash

# 供 ~/.config/autostart 下 desktop 文件调用实现用户级自启服务

sunset_sunrise()
{
    $HOME/.local/bin/sunset_sunrise
}

cron() {
    sunset_sunrise
    
    [ $1 ] && sleep $1
    let i=10
    while true; do
        [ $((i % 300)) -eq 0 ] && sunset_sunrise # 每300秒
        sleep 10; let i+=10
    done
}

cron 5 &