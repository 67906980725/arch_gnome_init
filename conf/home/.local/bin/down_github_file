#!/usr/bin/env bash

# 使用代理下载github文件  down_github_file <url> [use_proxy_url_num:-0] 

cd $HOME/Downloads

proxys=("https://gh.flyinbug.top/gh" \
    "https://ghproxy.com" \
    "https://proxy.methanol.top")

url="$1"
use_num=$2;[ ! $use_num ] && use_num=0
proxy_url="${proxys[$use_num]}"
proxyed_url="$proxy_url/$url"

# 保持文件名 https://blog.csdn.net/pudge_yang_zhang/article/details/90241329
curl -OJ -# -L "$proxyed_url"
